<?xml version="1.0"?>
<assembly>
  <!-- see http://maven.apache.org/plugins/maven-assembly-plugin/assembly.html -->
  <id>bin</id>
  <formats>
    <format>dir</format>
    <format>tar.gz</format>
    <format>tar.bz2</format>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>${project.basedir}/..</directory>
      <outputDirectory>${assembly.dir}</outputDirectory>
      <includes>
        <include>README.md</include>
        <include>MAINTAINERS</include>
        <include>LICENSE</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>src/main/assembly</directory>
      <outputDirectory>${assembly.dir}/man/man1</outputDirectory>
      <fileMode>0644</fileMode>
      <includes>
        <include>*.1</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>target/classes</directory>
      <outputDirectory>${assembly.dir}/bin</outputDirectory>
      <fileMode>0755</fileMode>
      <includes>
        <include>*.sh</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>target</directory>
      <outputDirectory>${assembly.dir}/lib</outputDirectory>
      <excludes>
        <exclude>*-javadoc.jar</exclude>
        <exclude>*-sources.jar</exclude>
      </excludes>
      <includes>
        <include>*.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>src/main/resources</directory>
      <outputDirectory>${assembly.dir}/etc</outputDirectory>
      <includes>
        <include>log4j2*</include>
      </includes>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <outputDirectory>${assembly.dir}/lib</outputDirectory>
      <unpack>false</unpack>
      <scope>runtime</scope>
    </dependencySet>
  </dependencySets>
</assembly>
